  <%= form_tag entrysheet2s_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,
                     options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                     {
                       prompt: '業界で絞り込み検索',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %>

<div class="row ">

  
  
  <% @entrysheet2s.each do |entrysheet2| %>
    
      
  <div class="col-lg-3 ">
          
            <div class="card">
              <div class='card-header'>
                    
               <i class="fas fa-user-alt"></i> 投稿者:<%= link_to entrysheet2.user.name, user_path(entrysheet2.user) %> 
              </div>
          
            
              <div class="card-body">
    
            
                <p class="card-text">会社名<br><%= entrysheet2.company %></p><br>
                
                <p class="card-text">業界<br>
                <% entrysheet2.tags.each do |tag| %>
       
                  <%= tag.name %>
                <% end %></p><br>       
                <%= link_to '詳細', entrysheet2, class: 'btn btn-sm btn-primary' %>
                </p>
              </div>

            </div>
       
     
      
  </div>  
  <% end %>
</div>
<br>
  <%= paginate @entrysheet2s %>
