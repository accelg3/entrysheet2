<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @entrysheet2, local: true) do |f| %>
  
      <div class="form-group ">
        <%= f.label :company, '会社名' %>
        <%= f.text_field :company, class: 'form-control ' %>
      </div>

      <div class="form-group">
        <%= f.label :idea, '企業理念' %>
        <%= f.text_field :idea,:size=>"60", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :industry, '業界' %>
        <%= f.text_field :industry, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :business, '事業' %>
        <%= f.text_field :business, class: 'form-control' %>
      </div>
    　<div class="field">
            <%= f.label :esfileup,'ESファイルアップロード' %><br>
            <%= f.file_field :esfileup %>
      </div>


      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div
