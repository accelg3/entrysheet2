<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @entrysheet2, local: true) do |f| %>
  
      <div class="form-group ">
        <%= f.label :company, '会社名' %>
        <%= f.text_field :company, class: 'form-control ' %>
      </div>

      <div class="form-group">
        <%= f.label :idea, '企業理念' %>
        <%= f.text_field :idea,:size=>"60", class: 'form-control' %>
      </div>


      <div class="form-group">
        <%= f.label :business, '事業' %>
        <%= f.text_field :business, class: 'form-control' %>
      </div>
    　<div class="field">
            <%= f.label :esfileup %>
            <%= f.file_field :esfileup, id: :user_esfileup %>
      </div>
      <div class="check_box">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div>
            <%= tag.label do %>
             <%= tag.check_box %>
             <%= tag.text %>
            <% end %>
           </div>
         <%end%>
      </div>



      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div
